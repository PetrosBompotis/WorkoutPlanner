<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:id="@+id/linearLayoutWorkoutPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/workout_plan_spinner"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.55"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lavender_border"
                    android:padding="8dp"
                    android:textColor="@color/lavender"/>

                <Button
                    android:id="@+id/workout_plan_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="10dp"
                    android:text="D"/>

                <Button
                    android:id="@+id/workout_plan_rename_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.15"
                    android:text="R"/>

                <Button
                    android:id="@+id/workout_plan_create_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.15"
                    android:text="C"/>
            </LinearLayout>
            <!-- TabLayout for routines -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutRoutines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable"
                app:tabGravity="fill"/>

            <!-- ViewPager for fragments -->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerRoutines"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>